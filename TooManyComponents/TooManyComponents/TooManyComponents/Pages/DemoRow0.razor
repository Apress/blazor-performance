
@if (Row != null)
{
  <tr class="@Class">
    <DemoCell Data="@Row.date" Selected="@Selected" align="left" title="Date"/>
    <DemoCell Data="@Row.state" align="center" title="State" />
    <DemoCell Data="@Row.positive" align="right" />
    <DemoCell Data="@Row.negative" align="right" />
    <DemoCell Data="@Row.hospitalizedCurrently" align="right" />
    <DemoCell Data="@Row.hospitalizedCumulative" align="right" />
    <DemoCell Data="@Row.death" align="right" />
    <DemoCell Data="@Row.totalTestsViral" align="right" />
    <DemoCell Data="@Row.positiveTestsViral" align="right" />
    <DemoCell Data="@Row.positiveIncrease" align="right" />
    <DemoCell Data="@Row.negativeIncrease" align="right" />
    <DemoCell Data="@Row.negativeTestsViral" align="right" />
  </tr>
}

@code {

  [Parameter]
  public DemoData? Row { get; set; }

  [Parameter]
  public Action? Selected { get; set; }

  [Parameter]
  public bool IsCurrentRow { get; set; }

  public string Class =>
    IsCurrentRow ? "table-success" : "";

}
